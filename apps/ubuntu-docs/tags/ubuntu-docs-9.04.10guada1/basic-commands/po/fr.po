#: basic-commands/C/basic-commands.xml:608(keycap)
msgid "e"
msgstr "e"

#: basic-commands/C/basic-commands.xml:610(keycap)
msgid "End"
msgstr "Fin"

#: basic-commands/C/basic-commands.xml:615(para)
