msgstr "Щоб відкрити <application>Термінал</application> зробіть наступне:"

#: basic-commands/C/basic-commands.xml:75(para)
msgid ""
"Choose "
"<menuchoice><guimenu>Applications</guimenu><guimenuitem>Accessories</guimenui"
"tem><guimenuitem>Terminal</guimenuitem></menuchoice>;"
msgstr ""
"Оберіть "
"<menuchoice><guimenu>Програми</guimenu><guimenuitem>Аксессуари</guimenuitem><"
"guimenuitem>Термінал</guimenuitem></menuchoice>;"

#: basic-commands/C/basic-commands.xml:80(para)
msgid ""
"Or press <keycombo><keycap>Alt</keycap><keycap>F2</keycap></keycombo> and "
