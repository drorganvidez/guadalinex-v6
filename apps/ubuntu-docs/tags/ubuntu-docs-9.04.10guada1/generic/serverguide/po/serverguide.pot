#: ../generic/serverguide/C/mail.xml:841(command) 
msgid "sudo postconf -e 'transport_maps = hash:/etc/postfix/transport'"
msgstr ""

#: ../generic/serverguide/C/mail.xml:842(command) 
msgid "sudo postconf -e 'mailman_destination_recipient_limit = 1'"
msgstr ""

#: ../generic/serverguide/C/mail.xml:844(para) 
msgid "In <filename>/etc/postfix/master.cf</filename> double check that you have the following transport:"
