"ldapsearch -xLLL -b cn=config -D cn=admin,cn=config -W olcDatabase={1}hdb "
"olcDbIndex"
msgstr ""
"ldapsearch -xLLL -b cn=config -D cn=admin,cn=config -W olcDatabase={1}hdb "
"olcDbIndex"

#: serverguide/C/network-auth.xml:156(computeroutput)
#, no-wrap
msgid ""
"Enter LDAP Password: \n"
"dn: olcDatabase={1}hdb,cn=config\n"
"olcDbIndex: objectClass eq\n"
msgstr ""
"Enter LDAP Password: \n"
"dn: olcDatabase={1}hdb,cn=config\n"
"olcDbIndex: objectClass eq\n"

