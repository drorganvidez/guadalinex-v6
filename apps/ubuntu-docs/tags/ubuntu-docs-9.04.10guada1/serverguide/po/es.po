#: serverguide/C/windows-networking.xml:1456(programlisting)
#, no-wrap
msgid ""
"\n"
"hosts: files mdns4_minimal [NOTFOUND=return] dns mdns4\n"
msgstr ""
"\n"
"hosts: files mdns4_minimal [NOTFOUND=return] dns mdns4\n"

#: serverguide/C/windows-networking.xml:1460(para)
msgid "Change the above to:"
