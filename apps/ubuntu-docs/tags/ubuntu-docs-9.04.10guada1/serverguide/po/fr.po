msgid ""
"\n"
"smtp      inet  n       -       -       -       -       smtpd\n"
msgstr ""
"\n"
"smtp inet n - - - - smtpd\n"

#: serverguide/C/mail.xml:172(para)
msgid "and modify it as follows:"
msgstr "et la modifier ainsi :"

