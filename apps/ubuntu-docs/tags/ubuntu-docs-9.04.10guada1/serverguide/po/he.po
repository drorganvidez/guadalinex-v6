msgid "sudo chmod a-w /etc/squid/squid.conf.original"
msgstr ""

#: ../generic/server/C/web-servers.xml:882(para) ../generic/server/C/network-applications.xml:2124(para) ../generic/serverguide/C/web-servers.xml:882(para)
msgid ""
