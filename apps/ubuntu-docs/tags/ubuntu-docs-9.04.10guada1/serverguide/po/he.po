msgstr ""

#: ../generic/server/C/package-management.xml:156(para) ../generic/serverguide/C/package-management.xml:156(para)
msgid "<emphasis role=\"bold\">B</emphasis>: Broken package"
msgstr ""

#: ../generic/server/C/package-management.xml:160(para) ../generic/serverguide/C/package-management.xml:160(para)
msgid ""
"<emphasis role=\"bold\">u</emphasis>: Unpacked files, but package not yet "
"configured"
msgstr ""

#: ../generic/server/C/package-management.xml:164(para) ../generic/serverguide/C/package-management.xml:164(para)
msgid ""
"<emphasis role=\"bold\">C</emphasis>: Half-configured - Configuration failed "
"and requires fix"
msgstr ""

#: ../generic/server/C/package-management.xml:168(para) ../generic/serverguide/C/package-management.xml:168(para)
