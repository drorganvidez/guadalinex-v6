#: serverguide/C/network-auth.xml:2407(userinput)
#, no-wrap
msgid ""
"dn: olcDatabase={1}hdb,cn=config\n"
"add: olcDbIndex\n"
"olcDbIndex: krbPrincipalName eq,pres,sub"
