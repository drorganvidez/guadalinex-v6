"  Schedule = \"LocalhostDaily\"\n"
"  Storage = Bandenhet\n"
"  Write Bootstrap = \"/var/lib/bacula/LocalhostBackup.bsr\"\n"
"}  \n"

#: serverguide/C/backups.xml:785(para)
