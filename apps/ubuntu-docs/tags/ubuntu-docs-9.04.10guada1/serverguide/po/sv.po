"\n"
"NAME   = vm01\n"
"CPU    = 0.5\n"
"MEMORY = 512\n"
"\n"
"OS      = [ BOOT   = hd ]\n"
"\n"
"DISK   = [\n"
"  source   = \"/var/lib/one/images/vm01.qcow2\",\n"
