"Nästa steg, ändra instruktionen &lt;Directory "
"\"/path/to/rails/application/public\"&gt; :"

#: serverguide/C/web-servers.xml:794(programlisting)
#, no-wrap
msgid ""
"\n"
"&lt;Directory \"/path/to/rails/application/public\"&gt;\n"
"        Options Indexes FollowSymLinks MultiViews ExecCGI\n"
"        AllowOverride All\n"
"        Order allow,deny\n"
"        allow from all\n"
"        AddHandler cgi-script .cgi\n"
"&lt;/Directory&gt;\n"
